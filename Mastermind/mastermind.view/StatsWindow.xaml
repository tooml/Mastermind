<Window x:Class="mastermind.view.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mastermind.view"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="StatsWindow" Height="140" Width="200">
    <Grid>
        <TextBlock Margin="39,17,39,0" TextWrapping="Wrap" Text="{Binding Path=Winner, Mode=OneWay}" 
                                                            TextAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock Margin="39,38,39,0" TextWrapping="Wrap" Text="hat gewonnen" 
                                                            VerticalAlignment="Top" TextAlignment="Center"/>
        <TextBlock Margin="91,74,10,0" TextWrapping="Wrap" Text="{Binding Path=Duration, StringFormat=hh\\:mm\\:ss}" 
                                                        VerticalAlignment="Top" TextAlignment="Center"/>
        <TextBlock Margin="10,74,108,0" TextWrapping="Wrap" Text="Spieldauer:" VerticalAlignment="Top"/>


    </Grid>
</Window>
